{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "generic.seo"
    },
    "heroImage": {
      "type": "component",
      "repeatable": false,
      "component": "generic.hero-image"
    },
    "weight": {
      "type": "integer"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "children"
    },
    "children": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "parent"
    },
    "posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "mappedBy": "category"
    },
    "comic_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comic-post.comic-post",
      "mappedBy": "category"
    },
    "contentLong": {
      "type": "blocks"
    },
    "contentShort": {
      "type": "blocks"
    }
  }
}
